<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:id="@+id/dayTextView"
        android:fontFamily="sans-serif-medium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/conditionsImageView"
        android:layout_below="@+id/dayTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/clear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low"
        android:id="@+id/lowTextView"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/conditionsTextView"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/highTextView"
        android:layout_below="@+id/lowTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conditions"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/conditionsTextView"
            android:layout_below="@+id/conditionsImageView"
            android:layout_centerHorizontal="true"
            android:textSize="20sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>